@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <table class="table table-bordered">
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKA</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>@item.URUNİD</th>
                <th>@item.URUNAD</th>
                <th>@item.MARKA</th>
                <th>@item.TBLKATEGORİLER.KATEGORİAD</th>
                <th>@item.FİYAT</th>
                <th>@item.STOK</th>
                <th><a href="/Urun/Sil/@item.URUNİD" class="btn btn-danger">Sil</a></th>
                <th><a href="/Urun/Guncelle/@item.URUNİD" class="btn btn-success">Güncelle</a></th>
            </tr>
            }
        </tbody>
    </table>
    <a href="/Urun/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
